{
  "name": "@bayfrontmedia/skin",
  "version": "3.0.0",
  "description": "A free open source library of Tailwind CSS components.",
  "author": "Bayfront Media",
  "license": "MIT",
  "homepage": "https://github.com/bayfrontmedia/skin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bayfrontmedia/skin.git"
  },
  "bugs": {
    "url": "https://github.com/bayfrontmedia/skin/issues"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind css",
    "tailwind library",
    "component",
    "ui",
    "skin",
    "css"
  ],
  "scripts": {
    "app:update": "npm update && cp node_modules/preline/dist/preline.js docs/assets/js/preline.js",
    "watch:styles": "npx @tailwindcss/cli -i src/css/skin-docs.css -o docs/assets/css/skin-docs.css --watch",
    "build:styles": "npx @tailwindcss/cli -i src/css/skin-docs.css -o docs/assets/css/skin-docs.css",
    "build:styles:prod": "npx @tailwindcss/cli -i src/css/skin-docs.css -o docs/assets/css/skin-docs.css --minify",
    "watch:webpack": "webpack --mode development --watch",
    "build:webpack": "webpack --mode development",
    "build:webpack:prod": "webpack --mode production",
    "build:prod": "npm run build:webpack:prod && npm run build:styles:prod && cp src/css/skin.css dist/css/skin.css && cp docs/assets/js/skin.js dist/js/skin.js"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.320",
    "@iconify/tailwind4": "^1.0.6",
    "@tailwindcss/forms": "^0.5.10",
    "webpack": "^5.91",
    "webpack-cli": "^5.1"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.15",
    "preline": "^3.0.1"
  }
}
